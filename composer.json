{
    "name": "ruudk/absurd-php-sdk",
    "description": "PHP SDK for Absurd: a Durable Execution Engine for Postgres",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ruud Kamphuis",
            "email": "ruudk@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-pdo": "*",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^3.0",
        "symfony/event-dispatcher-contracts": "^3.6",
        "symfony/serializer": "^7.4 || ^8.0"
    },
    "require-dev": {
        "ext-bcmath": "*",
        "ext-curl": "*",
        "ext-pcntl": "*",
        "carthage-software/mago": "1.1.0",
        "ergebnis/composer-normalize": "^2.47",
        "monolog/monolog": "^3.10",
        "phpunit/phpunit": "^12.5",
        "shipmonk/composer-dependency-analyser": "^1.8",
        "symfony/console": "^7.4 || ^8.0",
        "symfony/dotenv": "^8.0",
        "symfony/event-dispatcher": "^8.0",
        "symfony/property-access": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Ruudk\\Absurd\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ruudk\\Absurd\\": "tests/",
            "Ruudk\\Absurd\\Examples\\": "examples/"
        }
    },
    "config": {
        "allow-plugins": {
            "carthage-software/mago": true,
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "post-install-cmd": "command -v lefthook >/dev/null 2>&1 && lefthook install || true"
    }
}
