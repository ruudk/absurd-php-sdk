{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "file_path=$(jq -r '.tool_input.file_path'); if [[ \"$file_path\" == *.php ]]; then ./vendor/bin/mago fmt \"$file_path\"; fi"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(./vendor/bin/mago analyze:*)",
      "Bash(./vendor/bin/mago fmt:*)",
      "Bash(./vendor/bin/mago lint:*)"
    ]
  }
}
